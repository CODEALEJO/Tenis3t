@model IEnumerable<Prestamo>

@{
    ViewData["Title"] = "Exhibiciones Realizadas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="cliente" class="form-control" placeholder="Buscar por nombre de cliente"
                        value="@ViewBag.ClienteFiltrado" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body text-end">
            <a asp-action="ConteoGeneral" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Conteo General
            </a>
            <!-- Botón para abrir el modal de impresión -->
            <button type="button" class="btn btn-info ms-2" data-bs-toggle="modal" data-bs-target="#modalImpresion">
                <i class="bi bi-printer"></i> Imprimir Exhibiciones
            </button>
        </div>
    </div>

    <!-- Modal para seleccionar usuario para impresión -->
    <div class="modal fade" id="modalImpresion" tabindex="-1" aria-labelledby="modalImpresionLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalImpresionLabel">Imprimir Exhibiciones por Local</h5>
                    <button type="button" class="btn-close" data-bs-close="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="ImprimirExhibiciones" method="get" target="_blank">
                        <div class="mb-3">
                            <label for="usuarioReceptor" class="form-label">Seleccionar Local/Usuario:</label>
                            <select class="form-select" id="usuarioReceptor" name="usuarioReceptor" required>
                                <option value="">-- Seleccione un local --</option>
                                @foreach (var usuario in Model.Select(p => p.UsuarioReceptor.UserName).Distinct().OrderBy(u => u))
                                {
                                    <option value="@usuario">@usuario</option>
                                }
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-printer"></i> Imprimir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            No se encontraron exhibiciones con los criterios de búsqueda.
        </div>
    }
    else
    {
        <div class="d-none d-md-block">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Exhibido En:</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Fecha Exhibición</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UsuarioReceptor.UserName</td>
                                <td>@item.TallaInventario.Inventario.Nombre (@item.TallaInventario.Talla)</td>
                                <td>@item.Cantidad</td>
                                <td>@item.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @(item.Estado == "Prestado" ? "bg-warning" : "bg-success")">
                                        @item.Estado
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Versión para móviles -->
        <div class="d-md-none">
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <div class="list-group-item mb-3">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1">@item.TallaInventario.Inventario.Nombre (@item.TallaInventario.Talla)</h6>
                            <span class="badge @(item.Estado == "Prestado" ? "bg-warning" : "bg-success")">
                                @item.Estado
                            </span>
                        </div>
                        <small class="text-muted">
                            Cliente: @item.UsuarioReceptor.UserName
                        </small>
                        <div class="mt-2">
                            <div class="d-flex justify-content-between">
                                <span>Cantidad: @item.Cantidad</span>
                                <span>Fecha: @item.FechaPrestamo.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Opcional: Búsqueda dinámica sin recargar la página
            $('input[name="cliente"]').on('input', function () {
                const searchValue = $(this).val().toLowerCase();
                $('table tbody tr, .list-group-item').each(function () {
                    const clienteText = $(this).find('td:first-child, small').text().toLowerCase();
                    $(this).toggle(clienteText.includes(searchValue));
                });
            });
        });
    </script>
}