<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tenis3t</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    @if (!IsSectionDefined("NoNavbar"))
    {
        <header>
            <!-- Barra de navegación superior con nombre de usuario -->
            <nav class="navbar navbar-expand navbar-light bg-light">
                <div class="container-fluid">
                    <!-- Espacio para logo o nombre de la app si lo deseas -->
                    <div class="navbar-brand"></div>

                    <!-- Nombre del usuario y menú -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="me-3">
                                <span class="text-primary fw-bold">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </nav>

            <!-- Barra de navegación principal -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded py-3">
                <div class="container-fluid justify-content-center">
                    <div class="navbar-nav flex-row">
                        <a class="nav-link btn btn-primary mx-2 text-white" asp-controller="Ventas" asp-action="Index">
                            <i class="bi bi-cash"></i> Ventas
                        </a>
                        <a class="nav-link btn btn-warning mx-2 text-white" asp-controller="Inventario" asp-action="Index">
                            <i class="bi bi-box-seam"></i> Inventario
                        </a>
                        <a class="nav-link btn btn-success mx-2 text-white" asp-controller="Prestamo" asp-action="Index">
                            <i class="bi bi-arrow-left-right"></i> Préstamos
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline"><button
                                type="submit" class="nav-link btn btn-danger mx-2 text-white"><i
                                    class="bi bi-box-arrow-right"></i> Cerrar Sesión</button></form>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @* Ignora la sección si no se usa *@
    @RenderSection("NoNavbar", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>