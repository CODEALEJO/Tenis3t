<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tenis3t</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (!IsSectionDefined("NoNavbar"))
    {
        <header>
            <!-- Barra de navegación global -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded">
                <div class="container-fluid justify-content-center">
                    <div class="navbar-nav flex-row">
                        <a class="nav-link btn btn-outline-primary mx-2" asp-controller="Ventas" asp-action="Index">
                            <i class="bi bi-cash"></i> Ventas
                        </a>
                        <a class="nav-link btn btn-outline-warning mx-2" asp-controller="Inventario" asp-action="Index">
                            <i class="bi bi-box-seam"></i> Inventario
                        </a>
                        <a class="nav-link btn btn-outline-success mx-2" asp-controller="Prestamo" asp-action="Index">
                            <i class="bi bi-arrow-left-right"></i> Préstamos
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-outline-danger mx-2" style="background:none; border:none;">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    @* Ignora la sección si no se usa *@
    @RenderSection("NoNavbar", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>