@model Tenis3t.Models.Prestamo
@{
    ViewData["Title"] = $"Nuevo Préstamo {(Model.TipoPrestamo == "Realizado" ? "Realizado" : "Recibido")}";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">@ViewData["Title"]</h2>
        </div>
        
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Create" id="prestamoForm" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="TipoPrestamo" />
                <input type="hidden" id="productoId" name="productoId" />
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Producto</label>
                        <select id="productoSelect" class="form-select" 
                                asp-items="@(new SelectList(ViewBag.Productos, "Id", "Nombre"))" required>
                            <option value="">Seleccione un producto</option>
                        </select>
                        <span class="text-danger small" id="productoValidation"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TallaInventarioId" class="form-label fw-bold">Talla</label>
                        <select asp-for="TallaInventarioId" class="form-select" id="tallaSelect" required>
                            <option value="">Seleccione una talla</option>
                        </select>
                        <span asp-validation-for="TallaInventarioId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LocalPersona" class="form-label fw-bold">
                            @(Model.TipoPrestamo == "Realizado" ? "Local/Persona que recibió" : "Local/Persona que prestó")
                        </label>
                        <input asp-for="LocalPersona" class="form-control" list="usuariosList" required />
                        <datalist id="usuariosList">
                            @foreach (var usuario in ViewBag.Usuarios)
                            {
                                <option value="@usuario">@usuario</option>
                            }
                        </datalist>
                        <span asp-validation-for="LocalPersona" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cantidad" class="form-label fw-bold"></label>
                        <input asp-for="Cantidad" class="form-control" min="1" required />
                        <span asp-validation-for="Cantidad" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaDevolucionEstimada" class="form-label fw-bold">Fecha Devolución Estimada</label>
                        <input asp-for="FechaDevolucionEstimada" class="form-control" type="date"
                               min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        <span asp-validation-for="FechaDevolucionEstimada" class="text-danger small"></span>
                    </div>

                    <div class="col-12 mt-3">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary me-md-2">
                                <i class="bi bi-save"></i> Registrar Préstamo
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Manejar cambio de producto
            $('#productoSelect').change(function () {
                var productoId = $(this).val();
                if (productoId) {
                    $('#productoValidation').text('');
                    $.get('/Prestamo/GetTallasByProducto', { productoId: productoId })
                        .done(function (data) {
                            $('#tallaSelect').empty();
                            $('#tallaSelect').append('<option value="">Seleccione una talla</option>');
                            $.each(data, function (index, talla) {
                                $('#tallaSelect').append(`<option value="${talla.id}">${talla.talla} (Disponibles: ${talla.cantidad})</option>`);
                            });
                        })
                        .fail(function () {
                            $('#productoValidation').text('Error al cargar tallas');
                        });
                } else {
                    $('#tallaSelect').empty();
                    $('#tallaSelect').append('<option value="">Seleccione un producto primero</option>');
                }
            });

            // Validación antes de enviar
            $('#prestamoForm').submit(function(e) {
                if ($('#productoSelect').val() === '') {
                    $('#productoValidation').text('Debe seleccionar un producto');
                    e.preventDefault();
                    return false;
                }
                
                if ($('#tallaSelect').val() === '') {
                    $('span[data-valmsg-for="TallaInventarioId"]').text('Debe seleccionar una talla');
                    e.preventDefault();
                    return false;
                }
                
                return true;
            });
        });
    </script>
}