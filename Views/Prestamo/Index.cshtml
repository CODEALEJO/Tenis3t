@model IEnumerable<Tenis3t.Models.Prestamo>

@{
    ViewData["Title"] = "Préstamos";
}

<h1>Lista de Préstamos</h1>

<div class="row mb-3">
    <div class="col-md-8">
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-filtro="todos" 
               class="btn @(ViewBag.FiltroSeleccionado == "todos" ? "btn-primary" : "btn-outline-primary")">
                Todos
            </a>
            <a asp-action="Index" asp-route-filtro="realizados" 
               class="btn @(ViewBag.FiltroSeleccionado == "realizados" ? "btn-primary" : "btn-outline-primary")">
                Mis Préstamos
            </a>
            <a asp-action="Index" asp-route-filtro="recibidos" 
               class="btn @(ViewBag.FiltroSeleccionado == "recibidos" ? "btn-primary" : "btn-outline-primary")">
                Préstamos Recibidos
            </a>
            <a asp-action="Index" asp-route-filtro="local" 
               class="btn @(ViewBag.FiltroSeleccionado == "local" ? "btn-primary" : "btn-outline-primary")">
                Por Local
            </a>
        </div>
    </div>
    <div class="col-md-4 text-right">
        <a asp-action="Create" class="btn btn-primary">Nuevo Préstamo</a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Talla</th>
            <th>Cantidad</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Receptor</th>
            <th>Prestador</th>
            <th>Estado</th>
            <th>¿Vencido?</th>
            <th>Días Restantes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Inventario?.Nombre</td>
                <td>@item.TallaInventario?.Talla</td>
                <td>@item.Cantidad</td>
                <td>@item.FechaPrestamo.ToShortDateString()</td>
                <td>@item.FechaDevolucionEstimada.ToShortDateString()</td>
                <td>@item.UsuarioReceptor?.UserName</td>
                <td>@item.UsuarioPrestamista?.UserName</td>
                <td>@item.Estado</td>
                <td>@(item.EstaVencido ? "Sí" : "No")</td>
                <td>@item.DiasRestantes</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>