@model IEnumerable<Tenis3t.Models.Prestamo>
@using Microsoft.AspNetCore.Identity
@using Tenis3t.Helpers
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Préstamos";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdminUser = currentUser != null && PermissionConstants.IsAdminUser(currentUser.UserName);
}

<div class="container">
    <h1 class="my-4">Mis Préstamos</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["WarningMessage"]</div>
    }

    <div class="mb-4">
        <div class="btn-group btn-group-sm mb-2" role="group">
            <a asp-action="Index" asp-route-filtro="todos"
                class="btn btn-outline-primary @(ViewBag.FiltroSeleccionado == "todos" ? "active" : "")">Todos</a>
            <a asp-action="Index" asp-route-filtro="realizados"
                class="btn btn-outline-primary @(ViewBag.FiltroSeleccionado == "realizados" ? "active" : "")">Realizados</a>
            <a asp-action="Index" asp-route-filtro="recibidos"
                class="btn btn-outline-primary @(ViewBag.FiltroSeleccionado == "recibidos" ? "active" : "")">Recibidos</a>
        </div>
        <a asp-action="Create" class="btn btn-success btn-sm float-end">Nuevo Préstamo</a>
    </div>

    @* busqueda por nombre *@
    <form method="get" asp-action="Index" class="row g-3 mb-4">

        <!-- Buscar por producto -->
        <div class="col-md-5">
            <label class="form-label fw-semibold">
                Buscar por producto
            </label>
            <input type="text" name="nombreProducto" class="form-control" placeholder="Ej: Air Force 1"
                value="@ViewBag.FiltroNombreProducto" />
        </div>

        <!-- Buscar por tienda -->
        <div class="col-md-5">
            <label class="form-label fw-semibold">
                Buscar por tienda (local)
            </label>
            <input type="text" name="nombreTienda" class="form-control" placeholder="Ej: Local Centro"
                value="@ViewBag.FiltroNombreTienda" />
        </div>

        <!-- Mantener filtro activo -->
        <input type="hidden" name="filtro" value="@ViewBag.FiltroSeleccionado" />

        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary w-100">
                Buscar
            </button>
        </div>
    </form>


    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item mb-3">
                <div class="d-flex justify-content-between">
                    <h6 class="mb-1">@item.TallaInventario.Inventario.Nombre (@item.TallaInventario.Talla)</h6>
                    <span
                        class="badge @(item.Estado?.Trim().Equals("Prestado", StringComparison.OrdinalIgnoreCase) == true ? "bg-warning" 
                                                                                                                                                                                         : item.Estado?.Trim().Equals("Devuelto", StringComparison.OrdinalIgnoreCase) == true ? "bg-success" 
                                                                                                                                                                                         : "bg-secondary")">
                        @item.Estado
                    </span>
                </div>
                <small class="text-muted">
                    Prestado por: <strong>@item.UsuarioPrestamista.UserName</strong><br />
                    Recibido por: <strong>@item.UsuarioReceptor.UserName</strong>
                </small>
                <div class="mt-2">
                    <div class="d-flex justify-content-between">
                        <span>Cantidad: @item.Cantidad</span>
                        <span>Fecha: @item.FechaPrestamo.ToString("dd/MM/yyyy")</span>
                    </div>
                    @if (item.FechaDevolucion.HasValue)
                    {
                        <div class="d-flex justify-content-between">
                            <span>Devuelto: @item.FechaDevolucion.Value.ToString("dd/MM/yyyy")</span>
                        </div>
                    }
                </div>

                @if (item.Estado?.Trim().Equals("Prestado", StringComparison.OrdinalIgnoreCase) == true)
                {
                    <div class="mt-2 btn-group w-100" role="group">
                        @if (item.UsuarioReceptorId == currentUser.Id)
                        {
                            <form asp-action="Devolver" method="post" class="d-inline @(isAdminUser ? "w-50" : "w-100")">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm w-100"
                                    onclick="return confirm('¿Seguro que deseas devolver este préstamo?')">
                                    Devolver
                                </button>
                            </form>
                        }

                    @if (isAdminUser && item.UsuarioPrestamistaId == currentUser.Id)
{
    <form asp-action="MarcarComoVendido" method="post" class="d-inline w-50">
        <input type="hidden" name="id" value="@item.Id" />
        <input type="hidden" name="filtro" value="@ViewBag.FiltroSeleccionado" />
        <input type="hidden" name="nombreProducto" value="@ViewBag.FiltroNombreProducto" />
        <input type="hidden" name="nombreTienda" value="@ViewBag.FiltroNombreTienda" />

        <button type="submit" class="btn btn-success btn-sm w-100">
            Marcar como Vendido
        </button>
    </form>
}

                    </div>
                }
                else
                {
                    <div class="mt-2 text-muted small">No hay acciones disponibles</div>
                }
            </div>
        }
    </div>
</div>