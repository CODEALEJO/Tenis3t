@model IEnumerable<Tenis3t.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<h1>Ventas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Venta</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FechaVenta.ToString("g")</td>
                    <td>@(item.Cliente ?? "PÃºblico general")</td>
                    <td>@item.TotalFormateado</td>
                    <td>
                        <span class="badge @(item.Estado == "Completada" ? "badge-success" : "badge-danger")">
                            @item.Estado
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        @if (item.Estado == "Completada")
                        {
                            <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Cancelar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>