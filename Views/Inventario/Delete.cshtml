@model Tenis3t.Models.Inventario

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-danger">Eliminar Producto</h2>

    <div class="alert alert-warning">
        <strong>¡Advertencia!</strong> Esta acción no se puede deshacer. ¿Estás seguro de que deseas eliminar este producto?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Nombre:</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Cantidad:</dt>
        <dd class="col-sm-9">@Model.Cantidad</dd>

        <dt class="col-sm-3">Costo Unitario:</dt>
        <dd class="col-sm-9">$@Model.CostoFormateado</dd>

        <dt class="col-sm-3">Precio de Venta:</dt>
        <dd class="col-sm-9">$@Model.PrecioVentaFormateado</dd>

        <dt class="col-sm-3">Ganancia por Unidad:</dt>
        <dd class="col-sm-9">$@Model.GananciaPorUnidadFormateado</dd>

        <dt class="col-sm-3">Ganancia Total:</dt>
        <dd class="col-sm-9">$@Model.GananciaTotalFormateado</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmar Eliminación
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>

<!-- Agregar iconos de Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">