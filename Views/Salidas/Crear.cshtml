@model Tenis3t.Models.Inventario

@{
    ViewData["Title"] = "Registrar Salida";
}

<div class="container mt-4" style="max-width: 600px;">
    <h3 class="mb-4 text-center">Registrar Salida</h3>

    <form asp-action="Crear" method="post">
        <input type="hidden" name="inventarioId" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Producto:</label>
            <input type="text" class="form-control" value="@Model.Nombre" readonly />
        </div>

        <div class="mb-3">
            <label for="tallaId" class="form-label">Seleccionar Talla:</label>
            <select name="tallaId" id="tallaId" class="form-select" required>
                <option value="">Seleccione una talla</option>
             @foreach (var talla in (List<Tenis3t.Models.TallaSelectViewModel>)ViewBag.Tallas)
{
    <option value="@talla.Id">@talla.Texto</option>
}
            </select>
        </div>

        <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad a retirar:</label>
            <input type="number" name="cantidad" id="cantidad" class="form-control" min="1" required />
        </div>

        <div class="mb-3">
            <label for="nota" class="form-label">Motivo / Nota:</label>
            <textarea name="nota" id="nota" class="form-control" rows="3" placeholder="Ej: Daño, pérdida, prueba, etc."></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Inventario" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">Registrar Salida</button>
        </div>
    </form>
</div>
